<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>

    </style>

    <style name="HintTextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="hintTextAppearance">@android:color/black</item>
        <item name="errorTextAppearance">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>


    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">@dimen/_150sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
    </style>

    <style name="FullHeightDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="smallLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    
    <!--Tavrevo-->
    <style name="Font20Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="edittext" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/_5ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black_80</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
    </style>
    
    <style name="Font12Regular" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Font10Regular" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Font8Regular" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Font7Regular" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Font14" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black_80</item>
    </style>
    <style name="Font14Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Font18Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font12" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black_80</item>
    </style>

    <style name="button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="radioButton" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black_80</item>
        <item name="buttonTint">@color/blue</item>
    </style>
</resources>
